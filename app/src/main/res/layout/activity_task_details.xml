<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <android.widget.ExpandableListView
        android:id="@+id/details_ex_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/task_bottom_layout"
        android:childDivider="@null"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingTop="10dp" />


    <LinearLayout
        android:id="@id/task_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/task_tv_allot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_wait_bill"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:text="分配"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_tv_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_wait_bill"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:text="开始"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/task_tv_pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_wait_bill"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:text="暂停"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</RelativeLayout>